#include<stdio.h>
int main()
{
    int n;
    printf("Enter number of elements in array:");
    scanf("%d",&n);
    int arr[n];
    int i,pos,ele;
    printf("Enter elements of array: ");
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("Enter the position to enter element:");
    scanf("%d",&pos);
    printf("Enter the element to insert:");
    scanf("%d",&ele);
    for(i=n-1;i>=pos-1;i--)
    {
        arr[i+1]=arr[i];
    }
    n++;
    arr[pos-1]=ele;
    printf("Elements of array: ");
    for(i=0;i<n;i++)
    {
        printf("%d ",arr[i]);
    }
    
    
    return 0;
}
