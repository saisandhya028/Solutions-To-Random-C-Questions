#include <stdio.h>

int main()
{
   int n,i,j,k;
   printf("Number of values:");
   scanf("%d",&n);
   int arr[n];
   printf("Enter the values:");
   for (i=0;i<n;i++)
   {
       scanf("%d",&arr[i]);
   }
   for(i=0;i<n;i++)
   {
       for(j=i+1;j<n;j++)
       {
           if(arr[i]==arr[j])
           {
               for(k=j;k<n;k++)
               {
                   arr[k]=arr[k+1];
           }
       
       n--;
       j--;
           }
   }
   }
   printf("Numbers after removing duplicates:");
   for(i=0;i<n;i++)
   {
       printf("%d ",arr[i]);
   }
   int choice,swapa,swapd;
   printf("Enter choice of sorting(1 for ascending and 2 for descending:");
   scanf("%d",&choice);
   for(j=0;j<n;j++)
   {
       for(k=0;k<n-j-1;k++)
       {
          if (choice==1)
          {
              if(arr[k]>arr[k+1])
              {
                  swapa=arr[k];
                  arr[k]=arr[k+1];
                  arr[k+1]=swapa;
              }
          }
          else
          {
              if(arr[k+1]>arr[k])
              {
                  swapd=arr[k+1];
                  arr[k+1]=arr[k];
                  arr[k]=swapd;
              }
          }
       }
   }
   printf("Numbers after sorting:");
   for(i=0;i<n;i++)
   {
       printf("%d ",arr[i]);
   }
   
    return 0;
}
