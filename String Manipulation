#include<stdio.h>
void count(char str[])
{
    int i=0,vowels=0,consonants=0,digits=0,special_characters=0,words=0,inword=0;
    while(str[i]!='\0')
    {
        if (str[i] == 'a' || str[i]=='e' || str[i]=='i' ||str[i]=='o' || str[i]=='u' ||str[i]=='A' || str[i]=='E' || str[i]=='I' || str[i]=='O' || str[i]=='U')
        {
         vowels++;   
        }
        else{
            if(str[i]>='0' && str[i]<='9')
            {
                digits++;
            }
            else if((str[i]>=33 && str[i]<=47) || (str[i]>=58 && str[i]<=64) || (str[i]>=91 && str[i]<=96) || (str[i]>=123 && str[i]<=126))
            {
                special_characters++;
            }
            else if ((str[i] >= 'A' && str[i] <= 'Z') || (str[i] >= 'a' && str[i] <= 'z'))
            {
                consonants++;
            }
        }
       if(str[i]!='\n' && str[i]!='\t' && str[i]!=' ' && str[i]!='\r')
       {
           if(inword==0)
           {
               words++;
               inword=1;
           }
       }
       else{
           inword=0;
       }
       i++;
    }
    
    printf("Vowels: %d\n",vowels);
    printf("Consonants: %d\n",consonants);
    printf("Digits: %d\n",digits);
    printf("Special Characters: %d\n",special_characters);
    printf("Words: %d\n",words);
}
void length(char string[])
{
    int i=0;
    while(string[i]!='\0')
    {
        i++;
    }
    printf("Length of string is %d\n",i-1);
}
int main(){
    char Str[100];
    printf("Enter line:");
    fgets(Str,sizeof(Str),stdin);
    count(Str);
    length(Str);
    return 0;
}
