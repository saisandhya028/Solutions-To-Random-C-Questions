#include <stdio.h>
struct StudentRecords{
    int roll_no;
    char name[30];
    float cgpa;
};
int main()
{
    int n,i;
    printf("Enter total number of students:");
    scanf("%d",&n);
    struct StudentRecords arr[n];
    for(i=0;i<n;i++)
    {
        printf("Enter details for student %d\n",i+1);
        printf("Roll Number:");
        scanf("%d",&arr[i].roll_no);
        getchar();
        printf("Name:");
        fgets(arr[i].name,sizeof(arr[i].name),stdin);
        printf("Marks:");
        scanf("%f",&arr[i].cgpa);
    }
    int search;
    printf("Enter the roll number to search:");
    scanf("%d",&search);
    int found=0;
    while(found!=1)
    {
    for(i=0;i<n;i++)
    {
        if(search==arr[i].roll_no)
        {
            found=1;
            printf("Student found\n");
            printf("Roll Number: %d\n",arr[i].roll_no);
            printf("Name: %s\n",arr[i].name);
            printf("Marks: %.2f\n",arr[i].cgpa);
        }
    }
    }
    return 0;
}
