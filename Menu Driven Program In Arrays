#include <stdio.h>
void displayarray(int array[],int size){
    int i;
    for(i=0;i<size;i++)
        {
            printf("%d ",array[i]);
        }
    
}
void largestinarray(int array[],int size)
{
    int high=array[0];
    int i;
        for(i=1;i<size;i++)
        {
            if(array[i]>high)
            {
                high=array[i];
            }
        }
        printf("Largest number: %d\n",high);
}
int search_in_array(int array[],int size,int search_num,int *index_num)
{
    int i=0;
    for(i=0;i<size;i++)
    {
      if(search_num==array[i])
      {
          *index_num=i;
          return 1;
      }
    }
    return 0;
}
int main()
{
    int arr[]={12,34,65,30,45,27};
    int i;
    int size=sizeof(arr)/sizeof(arr[0]);
    printf("Array is initialised with:");
    for(i=0;i<size;i++)
    {
        printf("%d ",arr[i]);
    }
    int option=0;
    while(option!=4)
    {
    
    if (option==1)
    {
        displayarray(arr,size);
    }
    if (option==2)
    {
        largestinarray(arr,size);
        
    }
    if(option==3)
    {
        int search_num,index_num,res;
        printf("Enter element to search:");
        scanf("%d",&search_num);
        res=search_in_array(arr,size,search_num,&index_num);
        if(res!=0)
        {
            printf("Element %d is fount at index%d\n",search_num,index_num);
        }
        
    }
    printf("Choose an operation:\n");
    printf(" 1.Display the Array\n");
    printf(" 2.Find the largest nummber in the array\n");
    printf(" 3.Search for an element in array\n");
    printf(" 4.Exit\n");
     printf("Option:");
    scanf("%d",&option);
    }
    return 0;
}
