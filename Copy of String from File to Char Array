#include<stdio.h>
#include<string.h>
int main()
{
    FILE *fp=fopen("File1.txt","w");
    if (fp==NULL)
    {
        printf("File doesn't exist\n");
        return 1;
    }
    char str[100];
    printf("Enter the text:");
    fgets(str,sizeof(str),stdin);
    fprintf(fp,"%s",str);
    fclose(fp);
    char str1[100];
    FILE *fp1=fopen("File1.txt","r");
    if (fp1==NULL)
    {
        printf("File doesn't exist\n");
        return 1; 
    }
    int i=0;
    char ch;
    while((ch=fgetc(fp1))!=EOF)
    {
        str1[i]=(char)ch;
        i++;
    }
    str1[i]='\0';
    int n=strlen(str1);
    for(i=0;i<n;i++)
    {
        if(str1[i]>=65 && str1[i]<=90)
        {
            str1[i]=str1[i]+32;
        }
    }
    printf("%s\n",str1);
    fclose(fp1);
    
    return 0;
}
