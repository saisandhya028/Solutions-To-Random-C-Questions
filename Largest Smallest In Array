#include<stdio.h>
#include<stdlib.h>
int main()
{
    int n;
    printf("Enter no of elements in array:");
    scanf("%d",&n);
    int* arr=(int*)malloc(n*sizeof(int));
    int i=0;
    printf("Enter elements of array:\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    int j,swap;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n-1-i;j++)
        {
           if(arr[j+1]>arr[j])
           {
               swap=arr[j];
               arr[j]=arr[j+1];
               arr[j+1]=swap;
           }
        }
    }
    printf("Largest element in array: %d\n",arr[0]);
    printf("Smallest element in array: %d\n",arr[n-1]);
    
    
    
    return 0;
}
