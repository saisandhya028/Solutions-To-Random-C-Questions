#include<stdio.h>
#include<stdlib.h>
#include<string.h>

struct Participant{
    int regno;
    char name[30];
    char event_name[100];
    int contact_no;
};
void display(struct Participant s1[],int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        if(strcmp("dance",s1[i].event_name)==0)
        {
            printf("Details of participants in dance:\n");
            printf("Register Number: %d\n",s1[i].regno);
            printf("Name: %s",s1[i].name);
            printf("Event Name: %s\n",s1[i].event_name);
            printf("Contact Number: %d\n",s1[i].contact_no);
        }
    }
}
int main()
{
    int n;
    printf("Enter no of particpants:");
    scanf("%d",&n);
    getchar();
    struct Participant S1[n];
    int i;
    for(i=0;i<n;i++)
    {
        printf("Details of participant %d:\n",i+1);
        printf("Enter Register Number:");
        scanf("%d",&S1[i].regno);
        getchar();
        printf("Enter Participant Name:");
        fgets(S1[i].name,sizeof(S1[i].name),stdin);
        printf("Enter Event Name:");
        scanf("%s",S1[i].event_name);
        printf("Enter Contact Number:");
        scanf("%d",&S1[i].contact_no);
    }
    display(S1,n);
    
    return 0;
}
