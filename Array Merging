#include<stdio.h>
int n1,n2;
void merge(int a[n1],int b[n2], int c[n1+n2])
{
    int i,j=0,k=0;
    for(i=0;i<n1+n2;i++)
    {
        if(i%2==0){
            c[i]=a[j];
            j++;
        }
        else{
            c[i]=b[k];
            k++;
        }
        
    }
}
int main()
{
    printf("Enter no of elements in array A:");
    scanf("%d",&n1);
    printf("Enter no of elements in array B:");
    scanf("%d",&n2);
    int A[n1],B[n2];
    int i;
    printf("Enter elements of array A:\n");
    for(i=0;i<n1;i++)
    {
        scanf("%d",&A[i]);
    }
    printf("Enter elements of array B:\n");
    for(i=0;i<n2;i++)
    {
        scanf("%d",&B[i]);
    }
    int C[n1+n2];
    merge(A,B,C);
    printf("Array C: ");
    for(i=0;i<n1+n2;i++)
    {
        printf("%d ",C[i]);
    }
    return 0;
}
